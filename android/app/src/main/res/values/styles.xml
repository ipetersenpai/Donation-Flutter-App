<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Launch Theme -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowSplashScreenBackground">@android:color/white</item> <!-- Background color -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash</item> <!-- Your image -->
        <item name="android:windowBackground">@color/white</item> <!-- Fallback for pre-Android 12 -->
    </style>

    <!-- Normal Theme -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/white</item> <!-- Background when Flutter is running -->
    </style>
</resources>
